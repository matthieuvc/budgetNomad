<div class="container">

  <div class="content_page">

  <h3>1º STEP: Chose your flight ✈️ </h3>

  <% Offer.last.flights.each_with_index do | flight, index |%>
  <p> <%= flight.departure%> </p>
  <p> <%= flight.arrival%> </p>
  <p> <%= flight.arrival_location%> </p>
  <p> <%= flight.depart_location%> </p>
  <%# THIS IS SHOWING ME ALL THE FLIGHTS INSIDE ONE OFFER, SO I SHOULD PUT THIS INSIDE OF THE MODAL ??? %>
  <% end %>



















    <% @flight_data.each do |flight|%>

        <div class="d-flex">
          <div class="flights-card mt-3">
            <div class="d-flex justify-content-between">

              <div class="offers-card-content">
                <h6><strong>DEPARTURE</strong></h6>

                <div class="d-flex">
                  <div class="d-flex">
                    <div class="me-2"><i class="fa-solid fa-plane-departure"></i></div>

                    <div class="me-5 d-flex flex-column justify-content-between">
                      <p> <%= flight[:localiation]%> </p>
                      <p> <%=flight[:start_date]%> </p>
                    </div>
                  </div>

                  <div class="d-flex">
                    <div class="me-2"><i class="fa-solid fa-plane-arrival"></i></div>

                    <div class="me-5 d-flex flex-column justify-content-between">
                      <p> <%=flight[:destination]%> </p>
                      <p> <%= flight[:end_date]%> </p>
                    </div>
                  </div>
                </div>
              </div>

              <div class="offers-card-content-price text-end d-flex flex-column justify-content-between">
                <div>
                  <h4><strong><%= flight[:price_per_passenger]%>€</strong></h4>
                  <h6>Price</h6>
                </div>
                <div>
                  <%= button_to "Select", {:controller => "flights", :action => "create", flight: flight, offer: params[:offer]}, class: "btn_select", method: :post %>
                </div>
              </div>

            </div>
          </div>
        </div>

      <% end %>
    </div>

  </div>

</div>
