<div class="container">

  <div class="mt-5">
  <p>Looking for: <strong><i><%= @offer.localisation %></i></strong> to <strong><i><%= @offer.destination %></i></strong> üèùÔ∏è Vacation starts at <strong><i> <%= @offer.start_date %> </i></strong> until <strong><i><%= @offer.end_date %></i></strong></p>
  <div class="thin-line-between-yellow"></div>
  </div>

  <div class="d-flex">
    <div class="content_page">

    <h3>1¬∫ STEP: Chose your flight ‚úàÔ∏è </h3>
      <% @departure_data.each do |departure| %>

        <div class="d-flex">
          <div class="flights-card mt-3">
            <div class="d-flex justify-content-between">

              <div>

                <h6 class="mb-0"><strong>DEPARTURE</strong></h6>
                <div class="thin-line-between-blue-card mb-2"></div>
                <p><%= departure[:go_departure_location]%> // <%= departure[:go_departure]%></p>
                <p><%= departure[:go_layover_location]%> </p>
                <p><%= departure[:go_arrival_location]%> // <%=departure[:go_arrival]%></p>


                <h6><strong>RETURN</strong></h6>
                <p><%= @return_data[@departure_data.index(departure)][:back_departure_location]%>// <%= @return_data[@departure_data.index(departure)][:back_departure]%></p>
                <p><%= @return_data[@departure_data.index(departure)][:back_layover_location]%></p>
                <p><%= @return_data[@departure_data.index(departure)][:back_arrival_location]%>// <%= @return_data[@departure_data.index(departure)][:back_arrival]%></p>
              </div>

              <div class="offers-card-content-price text-end d-flex flex-column justify-content-between">
                <div>
                  <h4><strong><%= sprintf("%.2f", departure[:price_per_passenger])%>‚Ç¨</strong></h4>
                  <h6>Price</h6>
                </div>
                <div>
                  <%= button_to "Select", {:controller => "flights", :action => "create", flight: departure.merge(@return_data[@departure_data.index(departure)]), offer: params[:offer]}, class: "btn_select", method: :post %>
                </div>
              </div>

            </div>
          </div>
        </div>

      <% end %>
      </div>

      <div class="flights-card text-end ms-5" style="margin-top: 107px;">
        <h5><strong> Check out your Package üí∞</strong></h5>
        <div class="thin-line-between-red mb-4"></div>

        <div class="offers-card-content">
          <p> There's nothing yet...add something!</p>
          <div class="thin-line-between mb-2"></div>
          <p class="text-grayish">Budget left: <%= @offer.budget%>‚Ç¨</p>
        </div>
      </div>

    </div>
  </div>
</div>
