<div class="container">

  <div class="content_page">
    <h1 class="text-center">Yay! Now you can enjoy the trip üòé</h1>

    <div class="d-flex">

      <div class="d-flex flex-column align-items-center me-5">
        <div>

          <%# FLIGHT CARD %>
          <div class="d-flex justify-content-between">

          <div class="flights-card mt-3">

          <h6>Flight ‚úàÔ∏è </h6>
          <div class="thin-line-between mb-4"></div>

            <div class="offers-card-content">
              <h6><strong>DEPARTURE</strong></h6>
              <div class="d-flex">
                <div class="d-flex">
                  <div class="me-2"><i class="fa-solid fa-plane-departure"></i></div>

                  <div class="me-5 d-flex flex-column justify-content-between">
                    <p>From: <%= @flight.depart_location %></p>
                    <p>Departure: <%= @flight.departure %></p>
                  </div>
                </div>
              </div>

              <h6><strong>ARRIVAL</strong></h6>
                <div class="d-flex">
                  <div class="me-2"><i class="fa-solid fa-plane-arrival"></i></div>

                  <div class="me-5 d-flex flex-column justify-content-between">
                    <p>To: <%= @flight.arrival_location%></p>
                    <p>Arrival: <%= @flight.arrival %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%# FLIGHT CARD %>

          <%# HOTEL CARD %>
          <div class="flights-card mt-2">

          <h6>Hotel üè® </h6>
          <div class="thin-line-between mb-4"></div>

            <div class="d-flex justify-content-between">

              <div class="offers-card-content w-100">
                <div class="d-flex w-100">
                  <div class="me-3">
                    <img src="https://www.redrockresort.com/wp-content/uploads/2020/12/RR-Standard-2-Queen.jpg" class="image-hotel" alt="">
                  </div>

                  <div class="w-100">
                    <div class="w-100 pe-3 d-flex justify-content-between">
                      <div><h4><strong> <%= @hotel.name %> </strong></h4></div>
                      <div><p><%= @hotel.rating %><i class="fa-solid fa-star ms-2"></i></p></div>
                    </div>

                    <div>
                    <p> <%= @hotel.address %> </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <%# HOTEL CARD %>
        </div>
      </div>

        <%# RESUME WITH DETAILS AND PRICE %>
      <div class="flights-card mt-3">

      <h6>Budget üí∏ </h6>
      <div class="thin-line-between-blue mb-4"></div>

        <div>
          <p>Flight: <%= @flight.price %></p>
          <p>Hotel: <%= @hotel.price %></p>
          <p>Total of your package: <strong><%= @flight.price + @hotel.price %>‚Ç¨</strong></p>
        </div>
      </div>

    </div>
  </div>

</div>
