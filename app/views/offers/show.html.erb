<div class="container">

  <div class="content_page">
    <h1 class="text-center">Yay! Now you can enjoy the trip üòé</h1>

    <div class="mt-5">
    <p>Upcomming Trip: <strong><i><%= @offer.localisation %></i></strong> to <strong><i><%= @offer.destination %></i></strong> üèùÔ∏è Yoour vacation starts at <strong><i> <%= @offer.start_date %> </i></strong> until <strong><i><%= @offer.end_date %></i></strong></p>
    <div class="thin-line-between-yellow"></div>
    </div>

    <div class="d-flex">
      <div class="d-flex flex-column">
        <!-- FLIGHT CARD -->
          <%  @flights.each do |flight| %>
            <p><%= flight.departure %></p>
            <p><%= flight.depart_location %></p>
            <p><%= flight.arrival %></p>
            <p><%= flight.arrival_location %></p>
          <% end %>
          <!-- END FLIGHT CARD -->

          <!-- HOTEL CARD -->
          <div class="flights-card mt-2">
            <h6>Hotel üè®</h6>
            <div class="thin-line-between mb-4"></div>



            <div class="offers-card-content">
              <div class="d-flex w-100">
                <div class="me-3">
                <%= image_tag @hotel.picture, class: "image-hotel", alt: "" %>
                </div>
                <div class="w-100">
                  <div class="w-100 pe-3 d-flex justify-content-between">
                    <div>
                      <h4><strong><%= @hotel.name %></strong></h4>
                    </div>
                    <div>
                      <p><%= @hotel.rating %><i class="fa-solid fa-star ms-2"></i></p>
                    </div>

                  </div>
                  <div>
                    <p><%= @hotel.address %></p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <!-- END HOTEL CARD -->

        <!-- ACTIVITIES CARD -->
          <div class="flights-card mt-2">
            <h6>Activities üèÑ‚Äç‚ôÇÔ∏è</h6>
            <div class="thin-line-between mb-4"></div>



            <div class="offers-card-content">
              <div class="me-3">
                <div class="me-3">
              <%= image_tag @packaging_activity.picture, class: "image-hotel", alt: "" %>
              </div>
                <div class="w-100 pe-3 d-flex justify-content-between">
                  <div>
                    <h4><strong><%= @packaging_activity.category %></strong></h4>
                  </div>
                </div>
                <p><%= @packaging_activity.rating %><i class="fa-solid fa-star ms-2"></i></p>

                <div>
                  <p><%= @packaging_activity.activity1 %></p>
                </div>
                <div>
                  <p><%= @packaging_activity.activity2 %></p>
                </div>
                <div>
                  <p><%= @packaging_activity.activity3 %></p>
                </div>
                <div>
                  <p><%= @packaging_activity.activity4 %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- END ACTIVITIES CARD -->



      <%# RESUME WITH DETAILS AND PRICE %>
      <div class="flights-card text-end ms-5" style="margin-top: 16px;">
        <h5><strong> Your Budget üí∏</strong></h5>
        <div class="thin-line-between-red mb-4"></div>

        <div class="offers-card-content">
          <p>‚úàÔ∏è Flight: <strong><%= sprintf("%.2f", @offer.flights.sum(:price) / 2 ) %>‚Ç¨</strong></p>
          <p>üè® Hotel x <%= @hotel.num_nights %> days: <strong><%= sprintf("%.2f", @hotel.price * @hotel.num_nights) %>‚Ç¨</strong></p>
          <p>üèÑ‚Äç‚ôÇÔ∏è Activity: <strong> <%= sprintf("%.2f", @packaging_activity.price) %> ‚Ç¨</strong></p>

          <div class="thin-line-between mb-2"></div>

          <p>Total for the Package:<strong><%= number_with_precision(@offer.flights.sum(:price) / 2  + @hotel.price * @hotel.num_nights + @packaging_activity.price, precision: 2) %>‚Ç¨</strong></p>

        </div>
      </div>
      <!-- END RESUME WITH DETAILS AND PRICE -->
    </div>
  </div>
</div>
