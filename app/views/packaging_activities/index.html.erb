
<div class="container">

  <div class="mt-5">
  <p>Looking for: <strong><i><%= @offer.localisation %></i></strong> to <strong><i><%= @offer.destination %></i></strong> üèùÔ∏è Vacation starts at <strong><i> <%= @offer.start_date.strftime("%A, %b %d") %> </i></strong> until <strong><i><%= @offer.end_date.strftime("%A, %b %d") %></i></strong></p>
  <div class="thin-line-between-yellow"></div>
  </div>

  <div class="d-flex">
    <div class="content_page">

    <h3>3¬∫ STEP: Chose one activity package üèÑ‚Äç‚ôÇÔ∏è </h3>
      <% @activity_data.each do |activity|%>

        <div class="d-flex">
          <div class="flights-card mt-3">
            <div class="d-flex justify-content-between">

              <div class="w-100">
                <div class="d-flex w-100">
                  <div class="me-3">
                    <%# <%= image_tag hotel[:picture], class: "image-hotel", alt: "" %>
                  </div>

                  <div class="w-100">
                    <div class="w-100 pe-3 d-flex justify-content-between">
                      <div><h4><strong> <%= activity[:category]%> </strong></h4></div>
                      <div><p><%= activity[:rating]%><i class="fa-solid fa-star ms-2"></i></p></div>
                    </div>

                    <div>
                    <p> <%= activity[:activity1]%> </p>
                    </div>
                    <div>
                    <p> <%= activity[:activity2]%> </p>
                    </div>
                    <div>
                    <p> <%= activity[:activity3]%> </p>
                    </div>
                    <div>
                    <p> <%= activity[:activity4]%> </p>
                    </div>
                  </div>

                </div>
              </div>

              <div class="offers-card-content-price text-end d-flex flex-column justify-content-between">
                <div>
                  <h4><strong><%= sprintf("%.2f", activity[:price])%>‚Ç¨</strong></h4>
                  <h6>Price</h6>
                </div>

                <div>
                  <%= button_to "Select", {:controller => "packaging_activities", :action => "create", packaging_activities: activity, offer_id: @offer.id},class: "btn_select", method: :post %>
                </div>

              </div>

            </div>
          </div>
        </div>

      <% end %>
      </div>

      <div class="flights-card text-end ms-5 sticky-top" style="margin-top: 107px;">
        <h5><strong> Check out your Package üí∞</strong></h5>
        <div class="thin-line-between-red mb-4"></div>

        <div class="offers-card-content">
          <%# <p> There's nothing yet...</p> %>
          <p>‚úàÔ∏è Flight: <strong><%= @offer.flight.price %>‚Ç¨</strong></p>
          <% hotel_total = @offer.hotel.price * @num_nights %>
          <p>üè® Hotel x  <%= @num_nights %> days: <strong><%= hotel_total %>‚Ç¨</strong></p>

          <div class="thin-line-between mb-2"></div>

          <p>Total: <strong><%= @offer.flight.price + hotel_total%>‚Ç¨</strong></p>
          <p class="text-grayish">Budget left: <%= sprintf("%.2f", @offer.budget - @offer.flight.price - hotel_total)%>‚Ç¨</p>
        </div>
      </div>

    </div>

  </div>
</div>
