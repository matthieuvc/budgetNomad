<div class="container">
  <div class="content_page">
    <h3>Welcome to your account, <%= current_user.name %>!</h3>
    <div>
      <h5>All your Trips</h5>
    </div>
  <div class="cards d-flex justify-content-between">
    <% @offers.all.each do |offer| %>
      <div class="card m-4" style="width: 2000vw;">
        <%= image_tag offer.hotel.picture, class: "card-img-top", alt: "Card image cap", height: 300%>
      <div class="card-body">
        <h5 class="card-title">Trip to: <%= offer.destination %></h5>
        <p class="card-text"><%= offer.start_date %> to <%= offer.end_date %></p>
        <%= link_to "See details", offer_path(offer) %>
      </div>
      </div>
      <% end %>
