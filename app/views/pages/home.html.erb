<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


<div class="container">

  <div class="search-form mt-5">
    <%= simple_form_for @offer do |f| %>
    <div class="d-flex align-items-center">
      <%= f.input :localisation, placeholder: "From?", wrapper_html: {class: "me-3"} %>
      <%= f.input :destination, placeholder: "To?", wrapper_html: {class: "me-3"} %>
      <%= f.input :start_date, as: :date, html5: true,  placeholder: "Departure", id: "start_date_input", wrapper_html: {class: "me-3"} %>
      <%= f.input :end_date, as: :date, html5: true, placeholder: "Return", id: "end_date_input", min: Date.current, wrapper_html: {class: "me-3"} %>
      <%= f.input :max_budget, placeholder: "Budget" %>
      <div class="ms-3">
      <%= f.submit "Search", class: "btn_cta"%>
      </div>
    <% end %>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      var startDateInput = document.getElementById("start_date_input");
      var endDateInput = document.getElementById("end_date_input");

      startDateInput.addEventListener("input", function() {
        var startDate = new Date(startDateInput.value);
        var minEndDate = new Date(startDate.getTime() + 24 * 60 * 60 * 1000); // Adding one day in milliseconds

        var year = minEndDate.getFullYear();
        var month = String(minEndDate.getMonth() + 1).padStart(2, "0");
        var day = String(minEndDate.getDate()).padStart(2, "0");

        endDateInput.min = `${year}-${month}-${day}`;
      });
    });
  </script>

</div>
